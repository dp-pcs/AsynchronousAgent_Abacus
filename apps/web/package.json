{
  "name": "@monorepo/web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next"
  },
  "dependencies": {
    "next": "13.4.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/jest": "29.5.11",
    "@types/node": "^20.0.0",
    "@types/react": "18.2.66",
    "eslint": "^8.0.0",
    "eslint-config-next": "13.4.0",
    "jest": "29.7.0",
    "ts-jest": "29.2.0",
    "typescript": "5.5.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "pages/**/*.{ts,tsx}",
      "components/**/*.{ts,tsx}",
      "!**/*.d.ts"
    ]
  }
}